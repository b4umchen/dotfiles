{
  "workbench.settings.editor": "json",
  // Editor
  "window.openFoldersInNewWindow": "on",
  "editor.lineNumbers": "on",
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "breadcrumbs.enabled": true,
  "editor.trimAutoWhitespace": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "editor.fontFamily": "Meslo LG M for Powerline",
  "editor.renderLineHighlight": "all",
  "editor.multiCursorModifier": "ctrlCmd",
  "window.zoomLevel": 0,
  "editor.copyWithSyntaxHighlighting": false,
  "guides.overrideDefault": true,
  "editor.rulers": [
    80,
  ],
  "editor.cursorWidth": 1,
  "editor.cursorBlinking": "solid",
  "window.openFilesInNewWindow": "on",
  "window.nativeTabs": true,
  "window.restoreWindows": "all",
  "explorer.confirmDelete": false,
  // Workbench
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.associations": {
    "Dockerfile-centos": "dockerfile",
    "Dockerfile_*": "dockerfile",
    "dockerfile-*": "dockerfile",
    "*.html.erb": "html"
  },
  "workbench.editor.openPositioning": "last",
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.fontAliasing": "antialiased",
  "workbench.editor.closeEmptyGroups": false,
  "workbench.tree.indent": 10,
  "workbench.editor.showIcons": false,
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "window.title": "${activeEditorLong}",
  // coming soon
  "workbench.dialogs.useSimplified": false,
  // npm
  "npm.enableScriptExplorer": true,
  "npm.packageManager": "npm",
  // git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  // Terminal
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.fontFamily": "Meslo LG M for Powerline",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "100",
  "terminal.integrated.shell.osx": "/bin/zsh",
  // ruby/rails
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "solargraph.autoformat": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  // weitere
  "workbench.colorTheme": "Nord",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "liveServer.settings.donotShowInfoMsg": true,
  "gitlens.recentChanges.highlight.locations": [
    "gutter",
    "line",
    "overview"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // ALEX
  "search.showLineNumbers": true,
  "css.lint.duplicateProperties": "warning",
  "htmltagwrap.tag": "div",
  "html.format.indentInnerHtml": true,
  "less.lint.duplicateProperties": "warning",
  "[scss]": {},
  "scss.lint.duplicateProperties": "warning",
  "explorer.autoReveal": false,
  "[yaml]": {
    "editor.autoIndent": false
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "telemetry.enableTelemetry": false,
  "problems.decorations.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "force-aligned", // Wrap attributes to new lines [auto|force|force-aligned|force-expand-multiline] ["auto"]
      "wrap_line_length": 120, // Lines should wrap at next opportunity after this number of characters (0 disables)
      "single_quote": false,
      "sort_attributes": true,
      // neu
      "end_with_newline": false, // End output with newline
      "indent_char": " ", // Indentation character
      "indent_handlebars": false, // e.g. {{#foo}}, {{/foo}}
      "indent_inner_html": false, // Indent <head> and <body> sections
      "indent_scripts": "keep", // [keep|separate|normal]
      "indent_size": 2, // Indentation size
      "max_preserve_newlines": 1, // Maximum number of line breaks to be preserved in one chunk (0 disables)
      "preserve_newlines": true, // Whether existing line breaks before elements should be preserved
      "unformatted": [] // Tags that shouldn't be formatted. Causes mis-alignment
    },
    "prettyhtml": {
      "printWidth": 79,
      "singleQuote": false,
      "wrapAttributes": true,
      "sortAttributes": false
    }
  },
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatter.ts": "vscode-typescript",
  "vetur.validation.script": false,
  "vetur.validation.template": false,
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "typescript.validate.enable": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.scrollback": 10000,
  "window.titleBarStyle": "native",
  // File extensions to be parsed by the Typescript parser
  "importCost.typescriptExtensions": [
    "\\.vue?$"
  ],
  "eslint.workingDirectories": [
    "./"
  ],
  "eslint.options": {
    "configFile": ".eslintrc.js",
    "extensions": [
      ".js",
      ".vue",
      ".ts"
    ]
  },
  "eslint.nodePath": "apps/sb_web/assets/node_modules",
  // An array of language ids which should be validated by ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue",
    "vue-html",
    "html",
    "cypress" //,
    // "typescript",
    // "ts",
    // "@typescript-eslint"
  ],
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  // "eslint.run": "onSave",
  "eslint.run": "onType",
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "separateLine"
  },
  "editor.snippetSuggestions": "top",
  "diffEditor.ignoreTrimWhitespace": false,
  "typescript.suggest.completeFunctionCalls": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "typescript.implementationsCodeLens.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
